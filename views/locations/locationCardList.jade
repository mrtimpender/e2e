extends ../layout
block content
	#main
		// START WRAPPER
		.wrapper
			include ../../public/includes/left_sidebar.jade
		// START CONTENT
		section#content
			// start container
			.container
				#profile-page.section
					button.btn.cyan.waves-effect.waves-light.right(type='submit') Save Location!
					.row
						each location in locations
							// map-card
							.col.s12.m12.l4
								.map-card
									.card
										.card-image.waves-effect.waves-block.waves-light
											.map-canvas(data-lat='#{location.lat}', data-lng='#{location.lng}', id='map-canvas-#{location.id}')
										.card-content
											a.btn-floating.activator.btn-move-up.waves-effect.waves-light.red.right.accent-2(href="/locations/delete/#{location.id}")
												i.mdi-action-delete
											a.btn-floating.btn-move-up.waves-effect.waves-light.cyan.right(href="/locations/edit/#{location.id}")
												i.mdi-image-edit
											// Add instant start to trip functionality. On click.  Id is set as origin in new trip page
											a.btn-floating.btn-move-up.waves-effect.waves-light.light-primary-color.right
												i.mdi-hardware-keyboard-tab
											h4.card-title.grey-text.text-darken-4
												a.grey-text.text-darken-4(href='#')= location.name
											p.blog-post-content= location.formatted_address
										//- .card-reveal
										//- 	span.card-title.grey-text.text-darken-4= location.name 
										//- 		i.mdi-navigation-close.right
										//- 	p
										//- 		| Here is where a location description goes....IF I HAD ONE
										//- 	p
										//- 		i.mdi-communication-business.cyan-text.text-darken-2
										//- 		|  #{location.formatted_address}
												
																				
									.fixed-action-btn(style='bottom: 50px; right: 19px;')
										a.btn-floating.btn-large
											i.mdi-action-stars
										ul
											li
												a#modal-fire.btn-floating.blue.modal-trigger(href='/locations/new')
													i.large.mdi-communication-location-on
											li
												a.btn-floating.green(href='/trips/new')
													i.large.mdi-av-timer


			// FOOTER
			include ../../public/includes/footer.jade
			// JS Scripts
			include ../../public/includes/scripts.jade
			script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyB9xEAcDm6FwY9iDrdBRVsXhowU9FbDIao')  
